<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.laser">

    <uses-permission android:name="android.permission.INTERNET" /> <!-- 开机启动监听 -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" /> <!-- 往SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <queries>
        <intent>
            <action android:name="android.intent.action.TTS_SERVICE" />
        </intent>
    </queries>

    <application
        android:name=".ui.app.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Laser">
        <activity
            android:name=".ui.face.WitnessCheckActivity"
            android:screenOrientation="landscape">

        </activity>
        <activity
            android:name=".ui.PsychologyActivity"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".ui.face.facelogin.FaceLoginActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.face.facelogin.LoginActivity"/>

        <activity
            android:name=".ui.face.facelogin.FaceInitActivity"/>
        <activity
            android:name=".ui.BluetoothActivity"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".ui.MainActivity"
            android:configChanges="orientation|keyboard|keyboardHidden"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustPan|stateVisible"></activity>
        <activity
            android:name=".ui.HistoryActivity"
            android:launchMode="singleTask"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ui.LoginActivity"
            android:screenOrientation="landscape">

        </activity>

        <meta-data
            android:name="design_width_in_dp"
            android:value="1280" />
        <meta-data
            android:name="design_height_in_dp"
            android:value="800" />

        <receiver
            android:name=".ui.app.MyReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>

                <!-- 关机 -->
                <action android:name="android.intent.action.ACTION_SHUTDOWN" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".receiver.StartReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>