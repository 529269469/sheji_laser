<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_list_item_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/main_list_item_number"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:textColor="@color/textColor"
        android:textSize="@dimen/itemSize"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/main_list_item_currentRing"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:textColor="@color/textColor"
        android:textSize="@dimen/itemSize"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <androidx.appcompat.widget.AppCompatImageView
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="1.5"
        android:id="@+id/main_list_item_direction"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_16" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/main_list_item_useTime"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="4"
        android:textColor="@color/textColor"
        android:textSize="@dimen/itemSize"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <androidx.appcompat.widget.AppCompatTextView
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="5"
        android:id="@+id/main_list_item_currentTime"
        android:textColor="@color/textColor"
        android:textSize="@dimen/itemSize"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/main_list_item_replay"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:textColor="@color/textColor"
        android:textSize="@dimen/itemSize"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_16" />
</LinearLayout>